        "readline-sync": "^1.4.9"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "eslint": "^6.1",
        "mocha": "^5.2.0",
        "nyc": "^13.1.0",
        "sinon": "^7.1.1",
        "sinon-chai": "^3.3.0"
    },
    "nyc": {
        "exclude": [
            "coverage/**",
            "test/**"
